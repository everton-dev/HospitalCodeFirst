@model Hospital.UI.MVC.Models.FiltroPacienteViewModel

@{
    ViewData["Title"] = "FiltroPaciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Consulte o Paciente</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control cpf-mask" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Consultar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (Model.Paciente != null)
{
    <br />
    <hr />
    <div class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Sexo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Sexo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Email)
        </dd>
    </div>
    <div>
        @Html.ActionLink("Agendar", "Agendar", new { idPaciente = Model.Paciente.Id }) |
        <a asp-controller="Home" asp-action="Index">Voltar</a>
    </div>
}